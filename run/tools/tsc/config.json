{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "React",
    "jsxFactory": "h",
    "lib": ["ES2017", "DOM"],
    "module": "ES6",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "../../../build/esm",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES6"
  },
  "include": [
    "../../../source/**/*.ts*"
  ]
}
